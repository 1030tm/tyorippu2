<%= render "shared/header" %>
<div class='main'>

  <%# 画面上部の「ちょりっぷ」帯部分 %>
  <div class='title-contents'>
    <h2 class='service-title'>
      ちょりっぷ
    </h2>
    <p class='service-explain'>
      「ちょっとそこまでお出かけしようかな」
    </p>
    <p class='service-explain'>
      そんなちょっとのお出かけの記録アプリです
    </p>
  </div>
  <%# /画面上部の「ちょりっぷ」帯部分  %>


  <%# 投稿一覧 %>
  <div class='page-contents'>
    <h2 class='title'>ピックアップ</h2>
    <div class="subtitle" >
      NEW course!
    </div>
    
    <ul class='page-lists'>
      <%# 投稿内容 %>
      <% @pages.each do |page| %>
      <li class='list'>
        <%= link_to '#' do %>
        <div class='page-spot-img-content'>
          <%= image_tag "sky1.png", class: "page-img" %>
        </div>

        <div class='page-info'>
            <h3 class='page-name'>
              <%= page.page_title %>
            </h3>
            <div class='page-comment'>
              <span><%= page.page_comment %></span>
              <%# <div class='star-btn'>
                <%= image_tag "star.png", class:"star-icon" %>
                <%# <span class='star-count'>0</span> %>
              <%# </div> %>
            </div>
          </div>
        <% end %>
      <% end %>


      <%# ページが一つもない場合の表示 %>
      <% if @pages.empty? %>
        <li class='list'>
          <%= link_to '#' do %>
          <%= image_tag "sky1.png", class: "page-img" %>
          <div class='page-info'>
            <h3 class='page-name'>
              コースを記録しましょう！
            </h3>
            <div class='page-comment'>
              <span>楽しい１日を！！</span>
              <%# <div class='star-btn'>
                <%= image_tag "star.png", class:"star-icon" %>
                <%# <span class='star-count'>0</span> %>
              <%# </div> %>
            </div>
          </div>
          <% end %>
        </li>
      <% end %>
      <%# ページが一つもない場合の表示 %>

      <%# //投稿内容 %>
    </ul>
  </div>
  <%# 投稿一覧 %>
</div>

<%# 投稿ボタン %>
<%= link_to(new_page_path, class: 'purchase-btn') do %>
  <span class='purchase-btn-text'>投稿する</span>
  <%= image_tag 'write-icon.png' , class: "purchase-btn-icon" %>
<% end %>
<%# 投稿ボタン %>


